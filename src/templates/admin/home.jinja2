<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome, Admin User!</title>

    <link rel="stylesheet" href="{{ url_for('static', filename='admin/home.css') }}">
</head>
<body>
    {# Header #}
    <header class="header">
        <div class="header-content">
            <h1>Admin Dashboard</h1>
            <div class="user-info">
                <button class="theme-toggle" onclick="toggleTheme()">üåô Dark</button>
                <span>Admin User</span>
                <a class="logout-btn" href="{{ url_for('auth.logout') }}">Logout</a>
            </div>
        </div>
    </header>

    {# Body #}
    <div class="container">
        {# Welcome Section #}
        <section class="welcome-section">
            <h2>Welcome back, Admin!</h2>
            <p>Manage your applications here</p>
        </section>

        {# Dashboard Grid #}
        <section class="dashboard-grid">
            {# Movies Dashboard for Admin App #}
            <a href="{{ url_for('admin.movies') }}" class="dashboard-card movies-card">
                <div class="card-content">
                    <h3>Movie Dashboard</h3>
                    <p>Manage your movie collection, ratings, genres and media files. Add, edit, and organize your entire movie library.</p>
                    <div class="card-stats">
                        <span>{{ movies_count }} Movies</span>
                    </div>
                </div>
            </a>

            {# Watch Downlodad Movies #}
            <a href="#" class="dashboard-card">
                <div class="card-content">
                    <h3>Watch Downloaded Movies!</h3>
                    <p>Watch movies downloaded locally in the home server!</p>
                    <div class="card-stats">
                        <span>{{ movies_count }} Movies Active!</span>
                    </div>
                </div>
            </a>

            {# User Management for Admin App #}
            <a href="#" class="dashboard-card users-card">
                <div class="card-content">
                    <h3>User Management</h3>
                    <p>Coming Soon</p>
                    <div class="card-stats">
                        <span>{{ users_count }} Users</span>
                    </div>
                </div>
            </a>

            {# Coming Soon #}
            <a href="#" class="dashboard-card">
                <div class="card-content">
                    <h3>Coming Soon</h3>
                    <p>Coming Soon</p>
                    <div class="card-stats">
                        <span>None</span>
                    </div>
                </div>
            </a>
        </section>
    </div>

    <script>
        // Theme toggle functionality
        function toggleTheme() {
            const html = document.documentElement;
            const button = document.querySelector('.theme-toggle');
            const currentTheme = html.getAttribute('data-theme');

            console.log(currentTheme);

            if (currentTheme === 'dark') {
                html.removeAttribute('data-theme'); // remove to use the normal one, i.e. "light"
                button.textContent = 'üåô Dark';
                localStorage.setItem('theme', 'light');
            } else {
                html.setAttribute('data-theme', 'dark'); // set the attribute to "dark"
                button.textContent = '‚òÄÔ∏è Light';
                localStorage.setItem('theme', 'dark');
            }
        }

        // Load saved theme on page load
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme');
            const button = document.querySelector('.theme-toggle');
            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                button.textContent = '‚òÄÔ∏è Light';
            } else {
                button.textContent = 'üåô Dark';
            }
        });
    </script>
</body>
</html>