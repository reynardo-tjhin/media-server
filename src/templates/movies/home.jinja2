<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>

    <link rel="stylesheet" href="{{ url_for('static', filename='movies/home.css') }}">

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body class="bg-dark">
    {# navigation bar #}
    <nav class="navbar navbar-expand-lg fixed-top bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            {# Logo #}
            <a class="navbar-brand" href="{{ url_for('admin.home') }}">
                <svg width="200" height="60" viewBox="0 0 200 60" xmlns="http://www.w3.org/2000/svg">
                    <!-- Background circle for the icon -->
                    <circle cx="30" cy="30" r="25" fill="url(#gradient1)" stroke-width="2"/>
                    
                    <!-- Server/Media icon - stylized play button with server lines -->
                    <polygon points="22,20 22,40 38,30" fill="black" opacity="0.9"/>
                    <rect x="40" y="24" width="8" height="2" rx="1" fill="black" opacity="0.7"/>
                    <rect x="40" y="28" width="12" height="2" rx="1" fill="black" opacity="0.7"/>
                    <rect x="40" y="32" width="8" height="2" rx="1" fill="black" opacity="0.7"/>
                    <rect x="40" y="36" width="6" height="2" rx="1" fill="black" opacity="0.7"/>
                
                    <!-- Company name text -->
                    <text x="65" y="25" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="url(#textGradient)">Tjhin Media</text>
                    <text x="65" y="42" font-family="Arial, sans-serif" font-size="12" font-weight="normal" fill="url(#textGradient)" opacity="0.8">Server</text>
                
                    <!-- Gradients -->
                    <defs>
                        <!-- the background of the play button -->
                        <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:white;stop-opacity:0.9" />
                        </linearGradient>
                        
                        <!-- the font colors -->
                        <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" style="stop-color:white;stop-opacity:1" />
                        </linearGradient>
                    </defs>
                </svg>
            </a>

            <!-- when screen is too small, nav bar will collapse to a single button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="{{ url_for('movies.home') }}" class="nav-link active">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">TV Shows</a>
                    </li>
                </ul>

                {# Search section #}
                <form method="get" class="d-flex search-form" role="search">
                    <input name="movie-name" class="form-control me-2" type="search" placeholder="Search movies..." aria-label="Search"/>
                    <button class="btn btn-outline-success" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- movie gallery -->
    <div class="movie-gallery container text-center text-white">
        <!-- title -->
        <h1 class="gallery-title">Downloaded Movies</h1>

        <!-- controls -->
        <div class="border my-4 mx-0 rounded-4 bg-info bg-opacity-25">
            <!-- filter buttons -->
            <form method="get" class="form">
                <div class="d-flex flex-row justify-content-evenly">
                    <!-- genres -->
                    <div class="dropdown my-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">All Genres</button>
                        <div class="dropdown-menu dropdown-menu-dark max-h-64" style="width: 500px;">
                            <div class="row row-cols-2 mx-2">
                                {% for genre in genres %}
                                <div class="col form-check">
                                    <input name="genre" value="{{ genre.name }}" class="form-check-input" type="checkbox" id="check{{ genre.name }}" onchange="this.form.submit()" {{ genre.checked }}>
                                    <label class="form-check-label" for="check{{ genre.name }}">{{ genre.name }}</label>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <!-- release year -->
                    <div class="dropdown my-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ year_selected }}
                        </button>
                        <div class="dropdown-menu dropdown-menu-dark max-h-64" style="width: 300px;">
                            <input class="dropdown-item form-control" name="release_year" value="All Years" type="submit" id="release_year_all_years">

                            {% for year in range(max_year|int, min_year|int - 1, -1) %}
                            <input class="dropdown-item form-control" name="release_year" value="{{ year }}" type="submit" id="release_year_{{ year }}">
                            {% endfor %}
                        </div>
                    </div>

                    <!-- rating -->
                    <div class="dropdown my-3">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ imdb_rating_text }}
                        </button>
                        <div class="dropdown-menu dropdown-menu-dark max-h-64" style="width: 300px;">
                            <input class="dropdown-item form-control" name="imdb_rating" value="Show All" type="submit" id="imdb_rating_show_all">

                            <input class="dropdown-item form-control" name="imdb_rating" value="8+ (Excellent)" type="submit" id="imdb_rating_excellent">

                            <input class="dropdown-item form-control" name="imdb_rating" value="7+ (Good)" type="submit" id="imdb_rating_good">

                            <input class="dropdown-item form-control" name="imdb_rating" value="6+ (Fair)" type="submit" id="imdb_rating_fair">

                            <input class="dropdown-item form-control" name="imdb_rating" value="5+ (Average)" type="submit" id="imdb_rating_average">
                        </div>
                    </div>

                    <!-- sort by -->
                    <div class="dropdown my-3">
                        <button class="btn btn-secondary" type="button">Sort By</button>
                    </div>
                </div>
            </form>

            <!-- if any genre is clicked -->
            {% if genres_selected %}
            <div class="d-flex mb-3 mx-4 align-items-start">
                {% for genre_selected in genres_selected %}
                    <button type="button" class="btn btn-primary me-3"">
                        {{ genre_selected }}
                        <span class="text-white fs-5" onclick="removeGenre('{{ genre_selected }}');">&times;</span>
                    </button>
                {% endfor %}
            </div>
            {% endif %}
        </div>

        <!-- movie gallery -->
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 ">
            {% for movie in movies %}
            <div class="col pb-2 movie-card">
                <a href="#">
                    <img class="movie-poster" 
                         src="{{ url_for('static', filename='posters/' + movie.name + '.webp') }}"
                         alt="{{ movie.name }}"
                         loading="lazy">
                    <div class="year">
                        <span>{{ movie.release_year }}</span>
                    </div>
                    <div class="ratings">
                        <!-- IMDb rating -->
                        <div class="rating">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" aria-label="IMDb" role="img" viewBox="0 0 512 512">
                                <rect width="512" height="512" rx="15%" fill="#f5c518"/>
                                <path d="M104 328V184H64v144zM189 184l-9 67-5-36-5-31h-50v144h34v-95l14 95h25l13-97v97h34V184zM256 328V184h62c15 0 26 11 26 25v94c0 14-11 25-26 25zm47-118l-9-1v94c5 0 9-1 10-3 2-2 2-8 2-18v-56-12l-3-4zM419 220h3c14 0 26 11 26 25v58c0 14-12 25-26 25h-3c-8 0-16-4-21-11l-2 9h-36V184h38v46c5-6 13-10 21-10zm-8 70v-34l-1-11c-1-2-4-3-6-3s-5 1-6 3v57c1 2 4 3 6 3s6-1 6-3l1-12z"/>
                            </svg>
                            <span>{{ movie.imdb_rating }}</span>
                        </div>

                        <!-- Rotten Tomatoes Rating -->
                        <div class="rating">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                                <circle cx="50" cy="45" r="35" fill="#fa320a"/>
                                <ellipse cx="50" cy="42" rx="25" ry="28" fill="#ff6b47"/>
                                <ellipse cx="50" cy="45" rx="15" ry="20" fill="#ffffff" opacity="0.3"/>
                                <rect x="45" y="15" width="10" height="8" rx="2" fill="#228b22"/>
                                <ellipse cx="52" cy="12" rx="6" ry="3" fill="#228b22"/>
                            </svg>
                            <span>{{ movie.rotten_tomatoes_rating }}%</span>
                        </div>
                        
                        <!-- Metacritic Rating -->
                        <div class="rating">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                                <rect width="100" height="100" rx="8" fill="#66cc33"/>
                                <text x="50" y="65" font-family="Arial, sans-serif" font-size="45" font-weight="bold" 
                                      text-anchor="middle" fill="#ffffff">73</text>
                            </svg>
                            <span>{{ movie.metacritic_rating }}%</span>
                        </div>
                    </div>
                    <div class="movie-title-overlay">
                        <h3 class="movie-name">{{ movie.name }}</h3>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>

    <footer class="container border-top mt-5 text-white">
        <div class="mt-3">
            <h5>Tjhin Media Server</h5>
            <p class="text-white-50">All movies are downloaded locally. Design is inspired by boredflix.com</p>
        </div>
        <div>
            <p class="text-white-50">
                Â© 2025 
                <span class="text-white">Tjhin Media Server</span>.
                 All rights reserved.    
            </p>
        </div>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>

    <script>
        function removeGenre(element) {
            // change the value of the genre to false
            const elementID = '#check' + element;
            document.querySelector(elementID).checked = false;
            // submit the form with the changed value
            document.querySelector(".form").submit();
        }
    </script>
</body>
</html>